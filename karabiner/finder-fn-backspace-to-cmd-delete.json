{
    "description": "Finder专用：Fn+Backspace 删除文件 (模拟 Cmd+Del)",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.finder$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "delete_or_backspace",
                "modifiers": { "mandatory": ["fn"] }
            },
            "to": [
                {
                    "key_code": "delete_or_backspace",
                    "modifiers": ["left_command"]
                }
            ],
            "type": "basic"
        }
    ]
}
