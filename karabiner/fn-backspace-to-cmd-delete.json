{
    "description": "Finder & VSCode：Fn+Backspace → Cmd+Backspace",
    "manipulators": [
        {
            "conditions": [
                {
                    "bundle_identifiers": [
                        "^com\\.apple\\.finder$",
                        "^com\\.microsoft\\.VSCode$"
                    ],
                    "type": "frontmost_application_if"
                }
            ],
            "from": {
                "key_code": "delete_or_backspace",
                "modifiers": { "mandatory": ["fn"] }
            },
            "to": [
                {
                    "key_code": "delete_or_backspace",
                    "modifiers": ["left_command"]
                }
            ],
            "type": "basic"
        }
    ]
}
